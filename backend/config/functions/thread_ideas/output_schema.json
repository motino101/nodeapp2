{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Idea Threads",
    "type": "object",
    "required": ["threads", "summary"],
    "additionalProperties": false,
    "properties": {
      "threads": {
        "type": "array",
        "description": "3-5 focused thematic threads extracted from the sources",
        "minItems": 3,
        "maxItems": 5,
        "items": {
          "type": "object",
          "required": ["title", "insight", "supporting_quotes"],
          "additionalProperties": false,
          "properties": {
            "title": {
              "type": "string",
              "description": "Very specific, one-sentence title that captures the exact insight",
              "minLength": 10,
              "maxLength": 80
            },
            "insight": {
              "type": "string",
              "description": "A detailed paragraph describing the specific insight and its implications",
              "minLength": 100,
              "maxLength": 400
            },
            "supporting_quotes": {
              "type": "array",
              "description": "Direct quotes from sources that support this thread",
              "minItems": 1,
              "maxItems": 3,
              "items": {
                "type": "string",
                "minLength": 20,
                "maxLength": 300
              }
            }
          }
        }
      },
      "summary": {
        "type": "string",
        "description": "Brief overview of how these threads connect to the user's request",
        "minLength": 50,
        "maxLength": 300
      }
    }
  }