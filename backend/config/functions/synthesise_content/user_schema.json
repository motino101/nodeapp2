{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "input": {
      "type": "string"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "comment": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["image", "link", "text", "docs"]
          },
          "contents": {
            "type": "string"
          }
        },
        "required": ["type", "contents"],
        "additionalProperties": false
      }
    }
  },
  "required": ["input", "sources"],
  "additionalProperties": false
}